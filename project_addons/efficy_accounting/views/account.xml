<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">efficy.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='button_draft']" position="after">
                <button name="button_get_moves_with_lines" type="object" string="get_moves_with_lines"/>
            </xpath>
            <xpath expr="//group[@id='header_right_group']/field[@name='date']" position="attributes">
                <attribute name="attrs"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="replace">
                <div class="oe_title">
                    <span class="o_form_label">
                        <field name="move_type" readonly="1" nolabel="1"/>
                    </span>
                    <h1>
                        <field name="efficy_reference"/>
                    </h1>
                </div>
                <field name="efficy_ref"/>
                <field name="efficy_sync_status" widget="badge"
                       decoration-success="efficy_sync_status == 'success'"
                       decoration-warning="efficy_sync_status == 'warning'"
                       decoration-muted="efficy_sync_status == 'skipped'"
                       decoration-danger="efficy_sync_status == 'failed'"
                />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Efficy connector">
                    <group>
<!--                        <field name="efficy_mapping_model_id"/>-->
                        <field name="efficy_entity"/>
                        <field name="efficy_key"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="name" string="Odoo Reference"/>
                <field name="approbation_status"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside">
                <field name="start_recognition_date" optional="show"/>
                <field name="end_recognition_date" optional="show"/>
                <field name="efficy_sync_status" widget="badge" optional="hide"
                       decoration-success="efficy_sync_status == 'success'"
                       decoration-warning="efficy_sync_status == 'warning'"
                       decoration-muted="efficy_sync_status == 'skipped'"
                       decoration-danger="efficy_sync_status == 'failed'"
                />
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name="start_recognition_date" optional="show"/>
                <field name="end_recognition_date" optional="show"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Attachments">
                    <field name="efficy_attachment_ids">
                        <tree>
                            <field name="data_filename"/>
                            <field name="data"/>
                            <field name="version"/>
                        </tree>
                    </field>
                </page>
                <page string="Efficy Sync Logs">
                    <field name="efficy_sync_log_ids"/>
                </page>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/form/sheet" position="inside">
                <notebook>
                    <page string="Efficy Sync Logs">
                        <field name="efficy_sync_log_ids"/>
                    </page>
                    <page string="Efficy connector">
                        <group>
                            <field name="efficy_entity"/>
                            <field name="efficy_key"/>
                        </group>
                    </page>
                </notebook>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside">
                <field name="start_recognition_date" optional="show"/>
                <field name="end_recognition_date" optional="show"/>
                <field name="efficy_sync_status" widget="badge" optional="hide"
                       decoration-success="efficy_sync_status == 'success'"
                       decoration-warning="efficy_sync_status == 'warning'"
                       decoration-muted="efficy_sync_status == 'skipped'"
                       decoration-danger="efficy_sync_status == 'failed'"
                />
                <field name="total_amount_without_vat_diff" optional="hide"
                       decoration-success="abs(total_amount_without_vat_diff) &lt;= 0.01"
                       decoration-danger="abs(total_amount_without_vat_diff) &gt; 0.01"
                />
<!--                <field name="total_amount_without_vat_diff" optional="hide"/>-->
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="total_amount_diff"
                       decoration-success="total_amount_diff == 0"
                       decoration-danger="total_amount_diff != 0"
                />
            </xpath>
        </field>
    </record>


    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">efficy.account.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="efficy_ref"/>
                <field name="approbation_status"/>
                <field name="efficy_sync_status" widget="badge"
                       decoration-success="efficy_sync_status == 'success'"
                       decoration-warning="efficy_sync_status == 'warning'"
                       decoration-muted="efficy_sync_status == 'skipped'"
                       decoration-danger="efficy_sync_status == 'failed'"
                       optional="hide"
                />
                <field name="total_amount_diff" optional="hide"
                       decoration-success="total_amount_diff == 0"
                       decoration-danger="total_amount_diff != 0"
                />
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="efficy_reference"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree" model="ir.ui.view">
        <field name="name">account.move.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="approbation_status"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="efficy_reference"/>
            </xpath>
            <xpath expr="//tree" position="inside">
                <field name="efficy_ref" optional="hide"/>
                <field name="efficy_sync_status" widget="badge"
                       decoration-success="efficy_sync_status == 'success'"
                       decoration-warning="efficy_sync_status == 'warning'"
                       decoration-muted="efficy_sync_status == 'skipped'"
                       decoration-danger="efficy_sync_status == 'failed'"
                       optional="hide"
                />
                <field name="total_amount_diff" optional="hide"
                       decoration-success="total_amount_diff == 0"
                       decoration-danger="total_amount_diff != 0"
                />
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.invoice.select</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="." position="inside">
                <field name="efficy_reference"/>
                <field name="efficy_key"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_filter" model="ir.ui.view">
        <field name="name">account.move.select</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="." position="inside">
                <field name="efficy_reference"/>
                <field name="efficy_key"/>
            </xpath>
        </field>
    </record>

</odoo>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">efficy.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date'][0]" position="attributes">
                <attribute name="attrs"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="replace">
                <div class="oe_title">
                    <span class="o_form_label">
                        <field name="move_type" readonly="1" nolabel="1"/>
                    </span>
                    <h1>
                        <field name="efficy_reference"/>
                    </h1>
                </div>
                <field name="efficy_ref"/>
                <field name="efficy_sync_status" widget="badge"
                       decoration-success="efficy_sync_status == 'success'"
                       decoration-warning="efficy_sync_status == 'warning'"
                       decoration-muted="efficy_sync_status == 'skipped'"
                       decoration-danger="efficy_sync_status == 'failed'"
                />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Efficy connector">
                    <group>
                        <field name="efficy_mapping_model_id"/>
                        <field name="efficy_entity"/>
                        <field name="efficy_key"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="name" string="Odoo Reference"/>
                <field name="approbation_status"/>
            </xpath>
<!--            <xpath expr="//group[@id='header_left_group']" position="after">-->
<!--                <group>-->
<!--                    <field name="efficy_attachment_filename"/>-->
<!--                    <field name="efficy_attachment"/>-->
<!--                </group>-->
<!--            </xpath>-->
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside">
                <field name="start_recognition_date" optional="show"/>
                <field name="end_recognition_date" optional="show"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Attachments">
                    <field name="efficy_attachment_ids">
                        <tree>
                            <field name="data_filename"/>
                            <field name="data"/>
                            <field name="version"/>
                        </tree>
                    </field>
                </page>
                <page string="Efficy Sync Logs">
                    <field name="efficy_sync_log_ids"/>
                </page>
            </xpath>
        </field>
    </record>


    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">efficy.account.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="efficy_ref"/>
                <field name="approbation_status"/>
                <field name="efficy_sync_status" widget="badge"
                       decoration-success="efficy_sync_status == 'success'"
                       decoration-warning="efficy_sync_status == 'warning'"
                       decoration-muted="efficy_sync_status == 'skipped'"
                       decoration-danger="efficy_sync_status == 'failed'"
                       optional="hide"
                />
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="efficy_reference"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree" model="ir.ui.view">
        <field name="name">account.move.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="approbation_status"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="efficy_reference"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.invoice.select</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="." position="inside">
                <field name="efficy_reference"/>
            </xpath>
        </field>
    </record>

</odoo>
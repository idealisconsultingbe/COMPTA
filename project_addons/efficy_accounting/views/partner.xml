<odoo>

    <record id="view_partner_tree" model="ir.ui.view">
        <field name="name">efficy.res.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="efficy_ref"/>
            </xpath>
        </field>
    </record>

    <record id="view_partner_from" model="ir.ui.view">
        <field name="name">efficy.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="button_run_query" type="object" string="Run Query"/>
                </header>
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="inside">
                <field name="efficy_ref"/>
                <field name="efficy_sync_status" widget="badge"
                       decoration-success="efficy_sync_status == 'success'"
                       decoration-warning="efficy_sync_status == 'warning'"
                       decoration-muted="efficy_sync_status == 'skipped'"
                       decoration-danger="efficy_sync_status == 'failed'"
                />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Efficy connector">
                    <group>
                        <field name="efficy_mapping_model_id"/>
                        <field name="efficy_entity"/>
                        <field name="efficy_key"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Efficy Sync Logs">
                    <field name="efficy_sync_log_ids"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>